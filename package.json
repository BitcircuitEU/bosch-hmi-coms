{
  "name": "bosch-ebike-hmi-communicator",
  "version": "2.0.0",
  "description": "Bosch eBike HMI Communicator - WebUSB-basiertes Tool zur Kommunikation mit Bosch eBike Displays",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "build": "npm run frontend:build && npm run backend:start",
    "start": "npm run backend:start",
    "backend:dev": "npm run dev --workspace=backend",
    "backend:start": "npm run start --workspace=backend",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "install:all": "npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "bosch",
    "ebike",
    "display",
    "webusb",
    "web",
    "frontend",
    "diagnostic",
    "uds"
  ],
  "author": "Bosch eBike HMI Communicator",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}